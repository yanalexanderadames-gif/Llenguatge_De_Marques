{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "type": "object",

  "properties": {
    "$schema": {"type": "string"},
    "alumne": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "nom", "llinatges", "data_matricula", "curs"],
        "properties": {
          "id": { "type": "integer" },
          "nom": { "type": "string" },
          "llinatges": { "type": "string" },
          "data_naixement": { "type": "string" },
          "correu": { "type": "string" },
          "telefon": { "type": "string" },
          "adreca": { "type": "string" },
          "data_matricula": { "type": "string" },
          "curs": {
            "type": "string",
            "enum": ["DAM", "DAW", "ASIX", "SMX", "SEIA", "ER", "AUT"]
          }
        }
      }
    },

    "professor": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "nom", "llinatges", "data_incorporacio", "departament"],
        "properties": {

          "id": { "type": "integer" },
          "nom": { "type": "string" },
          "llinatges": { "type": "string" },
          "data_naixement": { "type": "string" },
          "correu": { "type": "string" },
          "telefon": { "type": "string" },
          "adreca": { "type": "string" },

          "data_incorporacio": { "type": "string" },

          "departament": {
            "type": "string",
            "enum": ["Informàtica", "Electricitat", "Automoció"]
          },

          "assignatura": {
            "type": "array",
            "items": {
              "type": "object",
              "additionalProperties": false,
              "required": ["id_assignatura", "nom_assignatura"],

              "properties": {
                "id_assignatura": {
                  "type": "integer"
                },

                "nom_assignatura": {
                  "type": "object",
                  "required": ["nom", "cicle"],
                  "additionalProperties": false,
                  "properties": {
                    "nom": { "type": "string" },
                    "cicle": {
                      "type": "string",
                      "enum": ["DAM", "DAW", "ASIX", "SMX", "SEIA", "ER", "AUT"]
                    }
                  }
                },

                "data_inici": { "type": "string" },
                "data_final": { "type": "string" }
              }
            }
          }

        }
      }
    }

  },

  "required": ["alumne", "professor"]
}